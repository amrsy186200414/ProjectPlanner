<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <ScrollView
        android:id="@+id/mainScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingTop="40dp"
            android:paddingBottom="120dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/rounded_time_bg"
                android:src="@drawable/ic_go_back"
                android:backgroundTint="@color/white"
                android:elevation="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvAddTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="ADD "
                android:textColor="@color/dark_text"
                android:textSize="28sp"
                android:fontFamily="sans-serif-light"
                app:layout_constraintBottom_toBottomOf="@id/btnBack"
                app:layout_constraintStart_toEndOf="@id/btnBack"
                app:layout_constraintTop_toTopOf="@id/btnBack" />

            <TextView
                android:id="@+id/tvAddTaskTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TASKS"
                android:textColor="@color/button_bg"
                android:textSize="28sp"
                android:fontFamily="sans-serif-black"
                app:layout_constraintBottom_toBottomOf="@id/btnBack"
                app:layout_constraintStart_toEndOf="@id/tvAddTitle"
                app:layout_constraintTop_toTopOf="@id/btnBack" />

            <LinearLayout
                android:id="@+id/LCurrentPlanName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="14dp"
                android:background="@drawable/rounded_time_bg"
                android:backgroundTint="#EBF2FF"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/btnBack">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To:"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/button_bg"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvPlanValueName"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="My Big Project"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/button_bg"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/newTaskHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/LCurrentPlanName">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NEW "
                    android:textColor="@color/dark_text"
                    android:textSize="22sp"
                    android:fontFamily="sans-serif-light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TASK"
                    android:textColor="@color/secondary_text"
                    android:textSize="22sp"
                    android:fontFamily="sans-serif-black" />
            </LinearLayout>

            <TextView
                android:id="@+id/labelTaskName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-medium"
                android:text="TASK NAME"
                android:textColor="@color/light_gray_text"
                android:textSize="11sp"
                android:letterSpacing="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/newTaskHeader" />

            <EditText
                android:id="@+id/etTaskName"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/input_field_bg"
                android:paddingHorizontal="16dp"
                android:hint="What needs to be done?"
                android:textSize="15sp"
                android:textColor="@color/dark_text"
                android:maxLines="1"
                app:layout_constraintTop_toBottomOf="@id/labelTaskName" />

            <TextView
                android:id="@+id/labelTaskStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:fontFamily="sans-serif-medium"
                android:text="START AFTER TASK"
                android:textColor="@color/light_gray_text"
                android:textSize="11sp"
                android:letterSpacing="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etTaskName" />

            <Spinner
                android:id="@+id/etTaskStrat"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/input_field_bg"
                android:paddingHorizontal="16dp"
                android:spinnerMode="dropdown"
                app:layout_constraintTop_toBottomOf="@id/labelTaskStart" />

            <TextView
                android:id="@+id/labelTaskDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:fontFamily="sans-serif-medium"
                android:text="DURATION (e.g. 2d 5h)"
                android:textColor="@color/light_gray_text"
                android:textSize="11sp"
                android:letterSpacing="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etTaskStrat" />

            <EditText
                android:id="@+id/etTaskDuration"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/input_field_bg"
                android:paddingHorizontal="16dp"
                android:hint="How long will it take?"
                android:textSize="15sp"
                android:textColor="@color/dark_text"
                android:maxLines="1"
                app:layout_constraintTop_toBottomOf="@id/labelTaskDuration" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddPreview"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/rounded_button_bg"
                android:text="+ Add Task"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:elevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/etTaskDuration"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="40dp"
                android:background="#EEEEEE"
                app:layout_constraintTop_toBottomOf="@id/btnAddPreview" />

            <LinearLayout
                android:id="@+id/listHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ALL "
                    android:textColor="@color/dark_text"
                    android:textSize="22sp"
                    android:fontFamily="sans-serif-light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TASKS"
                    android:textColor="@color/secondary_text"
                    android:textSize="22sp"
                    android:fontFamily="sans-serif-black" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/listHeader"
                app:layout_constraintStart_toStartOf="parent"
                tools:listitem="@layout/item_short_task" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSavePlan"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_margin="24dp"
        android:layout_gravity="bottom"
        android:background="@drawable/rounded_button_bg"
        android:text="Confirm and Create Plan"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-black"
        android:textSize="17sp"
        android:elevation="12dp" />

</FrameLayout>