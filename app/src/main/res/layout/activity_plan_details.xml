<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"

        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_time_bg"
            android:src="@drawable/ic_go_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLAN "
            android:fontFamily="@font/koulen"

            android:textColor="@color/dark_text"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_gravity="center_vertical" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INFO"
            android:fontFamily="@font/koulen"

            android:textColor="@color/text_like_background"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/planSummaryCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp">

            <TextView
                android:id="@+id/tvPlanName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/koulen"
                android:text="BUILD SCHOOL"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tvAllDurationLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kumbh_sans_light"
                    android:text="all duration:"
                    android:textColor="@color/text_like_background"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvAllDurationValue"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/kumbh_sans_light"
                    android:layout_height="wrap_content"
                    android:text="100d, 22h, 13m, 20s"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tvDescriptionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kumbh_sans_light"
                    android:text="description:"
                    android:textColor="@color/text_like_background"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvDescriptionValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kumbh_sans_light"
                    android:text="100d, 22h, 13m, 20s"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginStart="4dp" />
            </LinearLayout>
            <!-- تاريخ البدء -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tvStartLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kumbh_sans_light"
                    android:text="start:"
                    android:textColor="@color/text_like_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvStartValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/10/24"
                    android:textColor="@color/black"
                    android:fontFamily="@font/kumbh_sans_light"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- عدد المهام -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/tvTasksNumberLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tasks number:"
                    android:textColor="@color/text_like_background"
                    android:fontFamily="@font/kumbh_sans_light"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvTasksNumberValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kumbh_sans_light"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- المهام المكتملة -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/tvCompletedTasksLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kumbh_sans_light"
                    android:text="completed tasks:"
                    android:textColor="@color/text_like_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvCompletedTasksValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:fontFamily="@font/kumbh_sans_light"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvTasksInfoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/koulen"
        android:paddingTop="10dp"
        android:text="TASKS "
        android:textColor="@color/dark_text"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/planSummaryCard" />
    <TextView
        android:id="@+id/tvTasksInfoLabel_Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/koulen"
        android:paddingTop="10dp"

        android:text="Info"
        android:textColor="@color/text_like_background"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tvTasksInfoLabel"
        app:layout_constraintTop_toBottomOf="@id/planSummaryCard" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTasks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvTasksInfoLabel"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>