<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"

    android:paddingTop="40dp">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_time_bg"
        android:src="@drawable/ic_go_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/white"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/tvProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOUR "
        android:fontFamily="@font/koulen"
        android:textColor="@color/dark_text"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@+id/btnBack"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvProfileTitle_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="profile "
        android:fontFamily="@font/koulen"
        android:textColor="@color/text_like_background"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tvProfileTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/profileImageCard"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvProfileTitle">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user" /> </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USER"
        android:fontFamily="@font/koulen"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileImageCard" />

    <TextView
        android:id="@+id/labelUpdateName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE "
        android:fontFamily="@font/koulen"
        android:textSize="24dp"
        android:textColor="@color/dark_text"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvUserName" />
    <TextView
        android:id="@+id/labelUpdateName_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:text="Name"
        android:textColor="@color/text_like_background"
        android:fontFamily="@font/koulen"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/labelUpdateName"
        app:layout_constraintTop_toBottomOf="@id/tvUserName" />

    <LinearLayout
        android:id="@+id/updateNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/labelUpdateName">

        <EditText
            android:id="@+id/etUserName"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/input_field_bg"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="10dp"/>

        <ImageButton
            android:id="@+id/btnSaveName"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_time_bg"
            android:src="@drawable/ic_right" />
    </LinearLayout>

    <TextView
        android:id="@+id/labelGeneralInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="GENERAL "
        android:textColor="@color/dark_text"
        android:fontFamily="@font/koulen"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/updateNameLayout" />

    <TextView
        android:id="@+id/labelGeneralInfo_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Info"
        android:textColor="@color/text_like_background"
        android:fontFamily="@font/koulen"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/labelGeneralInfo"
        app:layout_constraintTop_toBottomOf="@id/updateNameLayout" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toBottomOf="@id/labelGeneralInfo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <!-- جميع الخطط -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAllPlansLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="all plans:"

                    android:textColor="@color/text_like_background"

                    android:fontFamily="@font/kumbh_sans_light"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/tvAllPlansValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- الخطط قيد التنفيذ -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tvInProgressLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="plans in progress:"
                    android:textColor="@color/text_like_background"
                    android:fontFamily="@font/kumbh_sans_light"
                    android:textSize="18sp"  />

                <TextView
                    android:id="@+id/tvInProgressValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- الخطط المكتملة -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tvCompletedLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="plans completed:"
                    android:textColor="@color/text_like_background"

                    android:fontFamily="@font/kumbh_sans_light"
                    android:textSize="18sp"  />

                <TextView
                    android:id="@+id/tvCompletedValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>