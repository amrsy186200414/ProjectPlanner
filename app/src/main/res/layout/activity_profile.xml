<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingBottom="24dp"
    android:paddingTop="40dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tvDurationValue" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_time_bg"
        android:src="@drawable/ic_go_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/white"
        android:elevation="2dp"
        android:layout_marginTop="0dp"/>

    <TextView
        android:id="@+id/tvProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOUR "
        android:fontFamily="sans-serif-light"
        android:textColor="@color/dark_text"
        android:textSize="28sp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/btnBack"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"/>

    <TextView
        android:id="@+id/tvProfileTitle_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROFILE "
        android:fontFamily="sans-serif-black"
        android:textColor="@color/button_bg"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@+id/tvProfileTitle"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/profileImageCard"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="80dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvProfileTitle">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USER NAME"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/dark_text"
        android:textSize="32sp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileImageCard" />

    <TextView
        android:id="@+id/labelUpdateName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE "
        android:fontFamily="sans-serif-light"
        android:textSize="20sp"
        android:textColor="@color/dark_text"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvUserName" />

    <TextView
        android:id="@+id/labelUpdateName_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="NAME"
        android:textColor="@color/button_bg"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/labelUpdateName"
        app:layout_constraintTop_toBottomOf="@id/tvUserName" />

    <LinearLayout
        android:id="@+id/updateNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/labelUpdateName">

        <EditText
            android:id="@+id/etUserName"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/input_field_bg"
            android:layout_marginTop="12dp"
            android:paddingHorizontal="16dp"
            android:textColor="@color/dark_text"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:elevation="2dp"/>

        <ImageButton
            android:id="@+id/btnSaveName"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_button_bg"
            android:src="@drawable/ic_right"
            app:tint="@color/white"
            android:elevation="4dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/labelGeneralInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="GENERAL "
        android:textColor="@color/dark_text"
        android:fontFamily="sans-serif-light"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/updateNameLayout" />

    <TextView
        android:id="@+id/labelGeneralInfo_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="INFO"
        android:textColor="@color/button_bg"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/labelGeneralInfo"
        app:layout_constraintTop_toBottomOf="@id/updateNameLayout" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="@color/card_background"
        app:layout_constraintTop_toBottomOf="@id/labelGeneralInfo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvAllPlansLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Plans"
                    android:textColor="@color/secondary_text"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvAllPlansValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="@color/dark_text"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/tvInProgressLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="In Progress"
                    android:textColor="@color/secondary_text"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvInProgressValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textColor="@color/button_bg"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/tvCompletedLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Completed"
                    android:textColor="@color/secondary_text"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvCompletedValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textColor="@color/status_green"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>