<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="25dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <View
            android:id="@+id/taskStatusIndicator"
            android:layout_width="13dp"
            android:layout_height="0dp"
            android:background="@color/status_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- الرقم والشرطة والاسم في سطر واحد -->
        <TextView
            android:id="@+id/tvTaskNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textStyle="bold"
            android:fontFamily="@font/koulen"
            android:textSize="18sp"
            android:textColor="@color/text_like_background"
            app:layout_constraintStart_toEndOf="@id/taskStatusIndicator"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/tvTaskDash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/koulen"
            android:text="-"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/text_like_background"
            app:layout_constraintStart_toEndOf="@id/tvTaskNumber"
            app:layout_constraintTop_toTopOf="@id/tvTaskNumber" />

        <TextView
            android:id="@+id/tvTaskName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/koulen"
            android:text="BUILD CLASSES"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#333333"
            app:layout_constraintStart_toEndOf="@id/tvTaskDash"
            app:layout_constraintTop_toTopOf="@id/tvTaskNumber"
            android:layout_marginStart="4dp" />



        <!-- تفاصيل المهمة (LinearLayout بدلاً من عناصر منفصلة) -->
        <LinearLayout
            android:id="@+id/taskDetailsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="@id/tvTaskNumber"
            app:layout_constraintTop_toBottomOf="@id/tvTaskNumber"
            android:layout_marginTop="8dp">

            <!-- الصف 1: المدة -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tvDurationLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="all duration:"
                    android:textSize="12sp"
                    android:textColor="#7B81C1"
                    android:fontFamily="@font/kumbh_sans_light" />

                <TextView
                    android:id="@+id/tvDurationValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2d"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:fontFamily="@font/kumbh_sans_light"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- الصف 2: تاريخ البدء -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvStartDateLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="start:"
                    android:textSize="12sp"
                    android:textColor="#7B81C1"
                    android:fontFamily="@font/kumbh_sans_light" />

                <TextView
                    android:id="@+id/tvStartDateValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/10/24,10:00AM"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:fontFamily="@font/kumbh_sans_light"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- الصف 3: التاريخ المتوقع للانتهاء -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvExpectedEndLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="expected end:"
                    android:textSize="12sp"
                    android:textColor="#7B81C1"
                    android:fontFamily="@font/kumbh_sans_light" />

                <TextView
                    android:id="@+id/tvExpectedEndValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:fontFamily="@font/kumbh_sans_light"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- الصف 4: التأخير -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvLateLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="late:"
                    android:textSize="12sp"
                    android:textColor="#7B81C1"
                    android:fontFamily="@font/kumbh_sans_light" />

                <TextView
                    android:id="@+id/tvLateValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="#F44336"
                    android:fontFamily="@font/kumbh_sans_light"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- الصف 5: الحالة -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvStatusLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="status:"
                    android:textSize="12sp"
                    android:textColor="#7B81C1"
                    android:fontFamily="@font/kumbh_sans_light" />

                <TextView
                    android:id="@+id/tvStatusValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="completed"
                    android:textSize="12sp"
                    android:textColor="@color/status_green"
                    android:fontFamily="@font/kumbh_sans_light"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- الزر الأول: Start/Done -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAction"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_button_bg"
            android:text="Start"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:fontFamily="@font/kumbh_sans_light"
            app:layout_constraintStart_toStartOf="@id/tvTaskNumber"
            app:layout_constraintTop_toBottomOf="@id/taskDetailsLayout" />

        <!-- بادجة الوقت المتبقي -->
        <TextView
            android:id="@+id/tvTimeRemainingBadge"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_time_bg"
            android:gravity="center"
            android:text="-1d, 24h, 20m, 0s"
            android:textColor="@color/status_red"
            android:textSize="14sp"
            android:fontFamily="@font/kumbh_sans_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnAction"
            app:layout_constraintTop_toTopOf="@id/btnAction" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>