<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <View
            android:id="@+id/taskStatusIndicator"
            android:layout_width="8dp"
            android:layout_height="0dp"
            android:background="@color/status_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/titleGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/taskStatusIndicator"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvTaskNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:fontFamily="@font/koulen"
                android:textSize="18sp"
                android:textColor="@color/button_bg" />

            <TextView
                android:id="@+id/tvTaskDash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" â€” "
                android:fontFamily="@font/koulen"
                android:textColor="@color/light_gray_text"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvTaskName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/koulen"
                android:text="BUILD CLASSES"
                android:textSize="18sp"
                android:textColor="@color/dark_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/taskDetailsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@id/titleGroup"
            app:layout_constraintEnd_toEndOf="@id/titleGroup"
            app:layout_constraintTop_toBottomOf="@id/titleGroup">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp">
                <TextView android:id="@+id/tvDurationLabel" android:layout_width="100dp" android:layout_height="wrap_content" android:text="Duration:" android:textSize="12sp" android:textColor="@color/secondary_text" android:fontFamily="@font/kumbh_sans_light" />
                <TextView android:id="@+id/tvDurationValue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2d" android:textSize="12sp" android:textColor="@color/dark_text" android:fontFamily="@font/kumbh_sans_light" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp">
                <TextView android:id="@+id/tvStartDateLabel" android:layout_width="100dp" android:layout_height="wrap_content" android:text="Start After:" android:textSize="12sp" android:textColor="@color/secondary_text" android:fontFamily="@font/kumbh_sans_light" />
                <TextView android:id="@+id/tvStartDateValue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="None" android:textSize="12sp" android:textColor="@color/dark_text" android:fontFamily="@font/kumbh_sans_light" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp">
                <TextView android:id="@+id/tvExpectedEndLabel" android:layout_width="100dp" android:layout_height="wrap_content" android:text="Expected End:" android:textSize="12sp" android:textColor="@color/secondary_text" android:fontFamily="@font/kumbh_sans_light" />
                <TextView android:id="@+id/tvExpectedEndValue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="--" android:textSize="12sp" android:textColor="@color/dark_text" android:fontFamily="@font/kumbh_sans_light" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:id="@+id/tvStatusLabel" android:layout_width="100dp" android:layout_height="wrap_content" android:text="Status:" android:textSize="12sp" android:textColor="@color/secondary_text" android:fontFamily="@font/kumbh_sans_light" />
                <TextView android:id="@+id/tvStatusValue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="PENDING" android:textSize="11sp" android:paddingHorizontal="8dp" android:background="@drawable/rounded_time_bg" android:backgroundTint="#F5F5F5" android:textColor="@color/secondary_text" android:fontFamily="@font/koulen" />
            </LinearLayout>

            <TextView android:id="@+id/tvLateLabel" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
            <TextView android:id="@+id/tvLateValue" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAction"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_button_bg"
            android:text="Start"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:fontFamily="@font/kumbh_sans_light"
            app:layout_constraintStart_toStartOf="@id/titleGroup"
            app:layout_constraintTop_toBottomOf="@id/taskDetailsLayout" />

        <TextView
            android:id="@+id/tvTimeRemainingBadge"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_time_bg"
            android:gravity="center"
            android:text="Wait..."
            android:textColor="@color/secondary_text"
            android:textSize="12sp"
            android:fontFamily="@font/kumbh_sans_light"
            app:layout_constraintBottom_toBottomOf="@id/btnAction"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnAction"
            app:layout_constraintTop_toTopOf="@id/btnAction" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>