<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <ScrollView
        android:id="@+id/mainScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingTop="40dp"
            android:paddingBottom="100dp">
            <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/rounded_time_bg"
            android:src="@drawable/ic_go_back"
            android:backgroundTint="@color/white"
            android:elevation="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvNewPlanTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="NEW "
                android:textColor="@color/dark_text"
                android:textSize="28sp"
                android:fontFamily="sans-serif-light"
                app:layout_constraintBottom_toBottomOf="@id/btnBack"
                app:layout_constraintStart_toEndOf="@id/btnBack"
                app:layout_constraintTop_toTopOf="@id/btnBack" />

            <TextView
                android:id="@+id/tvNewPlanTitle_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PLAN"
                android:textColor="@color/button_bg"
                android:textSize="28sp"
                android:fontFamily="sans-serif-black"
                app:layout_constraintBottom_toBottomOf="@id/btnBack"
                app:layout_constraintStart_toEndOf="@id/tvNewPlanTitle"
                app:layout_constraintTop_toTopOf="@id/btnBack" />

            <TextView
                android:id="@+id/labelPlanName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="sans-serif-medium"
                android:text="PLAN NAME"
                android:textColor="@color/secondary_text"
                android:textSize="13sp"
                android:letterSpacing="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnBack" />

            <EditText
                android:id="@+id/etPlanName"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_field_bg"
                android:hint="Enter plan name..."
                android:textColorHint="@color/light_gray_text"
                android:paddingHorizontal="16dp"
                android:textColor="@color/dark_text"
                android:fontFamily="sans-serif"
                android:elevation="2dp"
                app:layout_constraintTop_toBottomOf="@id/labelPlanName" />

            <TextView
                android:id="@+id/labelPlanDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-medium"
                android:text="DESCRIPTION"
                android:textColor="@color/secondary_text"
                android:textSize="13sp"
                android:letterSpacing="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etPlanName" />

            <EditText
                android:id="@+id/etPlanDescription"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_field_bg"
                android:gravity="top"
                android:hint="Describe your goals..."
                android:textColorHint="@color/light_gray_text"
                android:padding="16dp"
                android:textColor="@color/dark_text"
                android:fontFamily="sans-serif"
                android:elevation="2dp"
                app:layout_constraintTop_toBottomOf="@id/labelPlanDescription" />

            <androidx.cardview.widget.CardView
                android:id="@+id/btnGoToTasks"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#EBF2FF"
                app:layout_constraintTop_toBottomOf="@id/etPlanDescription">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:id="@+id/iconTask"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_addtask"
                         />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@id/iconTask"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plan Tasks"
                            android:textColor="@color/button_bg"
                            android:fontFamily="sans-serif-black"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Click to add and configure tasks"
                            android:textColor="@color/secondary_text"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_right"
                        app:tint="@color/button_bg" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSavePlan"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="24dp"
        android:layout_gravity="bottom"
        android:background="@drawable/rounded_button_bg"
        android:text="Create This Plan"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-black"
        android:textSize="18sp"
        android:elevation="8dp"
        />

</FrameLayout>