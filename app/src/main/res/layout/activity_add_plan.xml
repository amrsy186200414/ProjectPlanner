<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:paddingTop="40dp">

    <ScrollView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="80dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:paddingBottom="80dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_time_bg"
                android:src="@drawable/ic_go_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:backgroundTint="@color/white"/>

            <TextView
                android:id="@+id/tvNewPlanTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="NEW "
                android:textColor="@color/dark_text"
                android:textSize="30sp"
                android:fontFamily="@font/koulen"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/btnBack"
                app:layout_constraintStart_toEndOf="@id/btnBack"
                app:layout_constraintTop_toTopOf="@id/btnBack" />

            <TextView
                android:id="@+id/tvNewPlanTitle_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plan"
                android:textColor="@color/text_like_background"
                android:textSize="30sp"
                android:fontFamily="@font/koulen"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/btnBack"
                app:layout_constraintStart_toEndOf="@id/tvNewPlanTitle"
                app:layout_constraintTop_toTopOf="@id/btnBack" />

            <TextView
                android:id="@+id/labelPlanName"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/kumbh_sans_light"
                android:text="PLAN NAME"
                android:textColor="@color/light_gray_text"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnBack" />

            <EditText
                android:id="@+id/etPlanName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_field_bg"
                android:paddingHorizontal="15dp"
                app:layout_constraintTop_toBottomOf="@id/labelPlanName" />

            <TextView
                android:id="@+id/labelPlanDescription"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/kumbh_sans_light"
                android:text="PLAN Description"
                android:textColor="@color/light_gray_text"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etPlanName" />

            <EditText
                android:id="@+id/etPlanDescription"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_field_bg"
                android:paddingHorizontal="15dp"
                app:layout_constraintTop_toBottomOf="@id/labelPlanDescription" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnGoToTasks"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/rounded_time_bg"
                android:text="Add Tasks"
                android:textColor="@color/app_background"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/etPlanDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSavePlan"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="bottom"
        android:background="@drawable/rounded_time_bg"
        android:text="Add this Plan"
        android:textColor="@color/app_background"
        android:textStyle="bold"
        android:elevation="8dp"
        android:textSize="20sp"
        />

</FrameLayout>